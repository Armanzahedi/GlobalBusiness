@model GlobalBusiness.Infrastructure.DTOs.Auth.LoginDto
@{
    ViewData["Title"] = "Log in";
    Layout = "_LoginLayout";
}
<div class="wrapper wrapper-full-page ">
    <div class="full-page login-page ">
        <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
        <div class="content">
            <div class="container">
                <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                    <form id="account" method="post" role="form" class="form dir-right">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="card card-login card-white">
                            <div class="card-header">
                                <img src="~/management/img/card/card-gold.png" />
                                <h1 class="card-title">Log in</h1>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="mi">face</i>
                                            </div>
                                        </div>
                                        <input asp-for="Username" class="form-control" placeholder="username or email" autocomplete="off" />
                                    </div>
                                    <span style="display: block" asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-0">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="mi">lock</i>
                                            </div>
                                        </div>
                                        <input asp-for="Password" class="form-control" placeholder="password" type="password" autocomplete="off" />
                                    </div>
                                    <span style="display: block" asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
                                    <div style="display: flex; align-items: center">
                                        <label asp-for="RememberMe" class="checkbox m-0 text-muted">
                                            <input asp-for="RememberMe" />
                                            <span class="ml-2"></span>
                                            Remember Me
                                        </label>
                                    </div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger">
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-gold btn-lg btn-block mb-3">Get Started</button>
                                <div class="pull-left">
                                    @*<h6>
                                            <a as class="link footer-link">Create Account</a>
                                        </h6>*@
                                </div>
                                <div class="pull-right">
                                    <h6>
                                        <a asp-action="ForgotPassword" asp-controller="Auth" class="link footer-link">Forgot password?</a>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @if (ViewBag.IsNotAllowed != null)
    {
<script>
            $(".validation-summary-errors ul li")
                .append('<div><a href="@Url.Action("SendConfirmationEmail", "Auth", new { username = ViewBag.Username })">Resend Confirmation Email</a></div>');
</script>
    }

}
