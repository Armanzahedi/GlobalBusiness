@model GlobalBusiness.Web.Areas.Management.ViewModels.RoleViewModel

<input type="hidden" id="title" value="Create Role" />

<form asp-action="Create" method="post" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div style="float:right">
            <input type="submit" value="Submit" class="btn btn-gold mr-2" />
        </div>
    </div>
</form>
<script>
    $.validator.unobtrusive.parse("#form");
</script>